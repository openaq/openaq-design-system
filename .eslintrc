{
  "extends": ["standard"],
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [2, "always"],
    "jsx-quotes": [2, "prefer-single"],
    "no-console": 2,
    "no-extra-semi": 2,
    "semi-spacing": [2, { "before": false, "after": true }],
    "prefer-promise-reject-errors": 0
  }
}
